<div class="modal fade" id="viewCourseModal" tabindex="-1" aria-labelledby="viewCourseModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="viewCourseModalLabel">Detalles del Curso</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="editCourseForm">
                    <input type="hidden" name="id" id="courseId">
                    <div class="form-group">
                        <label for="courseTitle">Título:</label>
                        <p id="courseTitle" class="form-control-static"></p>
                    </div>
                    <div class="form-group">
                        <label for="courseDescription">Descripción:</label>
                        <p id="courseDescription" class="form-control-static"></p>
                    </div>
                    <div class="form-group">
                        <label for="courseStatus">Estado:</label>
                        <p id="courseStatus" class="form-control-static"></p>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>
